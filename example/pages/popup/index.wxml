<view>弹出位置</view>
<mu-cell
  title="show top Popup"
  isLink
  bind:click="showTop"
></mu-cell>
<mu-cell
  title="show bottom Popup"
  isLink
  bind:click="showBottom"
></mu-cell>
<mu-cell
  title="show left Popup"
  isLink
  bind:click="showLeft"
></mu-cell>
<mu-cell
  title="show right Popup"
  isLink
  bind:click="showRight"
></mu-cell>
<mu-cell
  title="show center Popup"
  isLink
  bind:click="showCenter"
></mu-cell>

<mu-popup
  show="{{popupVisiable}}"
  position="{{position}}"
  round
  bind:close="closePopup"
  bind:clickMask="clickMask"
>
</mu-popup>


<view>关闭按钮</view>
<mu-cell
  title="show bottom Popup"
  isLink
  closeable
  bind:click="showCloseable"
></mu-cell>
<mu-popup
  show="{{closeablePopupVisiable}}"
  position="bottom"
  closeable
  outsideCloseIcon
  closeIconPosition="left"
  bind:close="closePopup"
  bind:clickMask="clickMask"
>
</mu-popup>


<view>圆角弹窗</view>
<mu-cell
  title="show bottom Popup"
  isLink
  bind:click="showRound"
></mu-cell>
<mu-popup
  show="{{roundPopupVisiable}}"
  position="bottom"
  round
  bind:close="closePopup"
  bind:clickMask="clickMask"
>
</mu-popup>