<view class="button">
  <mu-cell title="按钮类型" />
  <view class="button-wrapper">
    <mu-button>默认按钮</mu-button>
    <mu-button type="primary">主要按钮</mu-button>
    <mu-button type="success">成功按钮</mu-button>
    <mu-button type="info">信息按钮</mu-button>
    <mu-button type="warning">警告按钮</mu-button>
    <mu-button type="danger">危险按钮</mu-button>
  </view>

  <mu-cell title="朴素按钮" />
  <view class="button-wrapper">
    <mu-button plain>朴素按钮</mu-button>
    <mu-button
      type="primary"
      plain
    >主要按钮</mu-button>
    <mu-button
      type="success"
      plain
    >成功按钮</mu-button>
    <mu-button
      type="info"
      plain
    >信息按钮</mu-button>
    <mu-button
      type="warning"
      plain
    >警告按钮</mu-button>
    <mu-button
      type="danger"
      plain
    >危险按钮</mu-button>
  </view>

  <mu-cell title="圆角按钮" />
  <view class="button-wrapper">
    <mu-button round>圆角按钮</mu-button>
    <mu-button
      type="primary"
      round
    >主要按钮</mu-button>
    <mu-button
      type="success"
      round
    >成功按钮</mu-button>
    <mu-button
      type="info"
      round
    >信息按钮</mu-button>
    <mu-button
      type="warning"
      round
    >警告按钮</mu-button>
    <mu-button
      type="danger"
      round
    >危险按钮</mu-button>
  </view>

  <mu-cell title="图标按钮" />
  <view class="button-wrapper">
    <mu-button icon="search"></mu-button>
    <mu-button
      type="primary"
      icon="edit"
      circle
    ></mu-button>
    <mu-button
      type="success"
      icon-class="ipm-iconwechat"
      circle
    ></mu-button>
    <mu-button type="info">
      图标按钮
      <mu-icon icon="search" />
    </mu-button>
    <mu-button
      type="warning"
      icon="down"
    >图标按钮</mu-button>
    <mu-button
      type="danger"
      icon="up"
    >图标按钮</mu-button>
    <mu-button
      type="warning"
      size="mini"
      icon="down"
    ></mu-button>
    <mu-button
      type="warning"
      size="medium"
      icon="down"
      circle
    ></mu-button>
  </view>

  <mu-cell title="大小按钮" />
  <view class="button-wrapper">
    <mu-button>默认按钮</mu-button>
    <mu-button
      type="success"
      size="medium"
    >中型按钮</mu-button>
    <mu-button
      type="primary"
      size="mini"
    >小型按钮</mu-button>
  </view>

  <mu-cell title="禁用状态" />
  <view class="button-wrapper">
    <mu-button>禁用状态</mu-button>
    <mu-button
      type="primary"
      disabled
    >主要按钮</mu-button>
    <mu-button
      type="success"
      disabled
    >成功按钮</mu-button>
    <mu-button
      type="info"
      disabled
    >信息按钮</mu-button>
    <mu-button
      type="warning"
      disabled
    >警告按钮</mu-button>
    <mu-button
      type="danger"
      disabled
    >危险按钮</mu-button>
  </view>

  <mu-cell title="加载状态" />
  <view class="button-wrapper">
    <mu-button loading>加载中...</mu-button>
    <mu-button
      type="primary"
      loading
    >自定义信息</mu-button>
  </view>

  <mu-cell title="文字按钮" />
  <view class="button-wrapper">
    <mu-button
      type="primary"
      text
    >文字主要按钮</mu-button>
    <mu-button text>文字默认按钮</mu-button>
    <mu-button
      type="primary"
      text
      disabled
    >禁用文字主要按钮</mu-button>
    <mu-button
      type="primary"
      text
    >
      文字主要按钮
      <mu-icon icon="search" />
    </mu-button>
  </view>


</view>