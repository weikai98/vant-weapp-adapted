<wxs
  src="../common/wxs/utils.wxs"
  module="utils"
/>

<button
  class="{{ [utils.bem('button', [type, size, {block, round, plain, circle, loading, disabled, unclickable: disabled || loading }])] }}"
  open-type="{{ disabled || loading || (canIUseGetUserProfile && openType === 'getUserInfo') ? '' : openType }}"
  business-id="{{ businessId }}"
  session-from="{{ sessionFrom }}"
  send-message-title="{{ sendMessageTitle }}"
  send-message-path="{{ sendMessagePath }}"
  send-message-img="{{ sendMessageImg }}"
  show-message-card="{{ showMessageCard }}"
  app-parameter="{{ appParameter }}"
  aria-label="{{ ariaLabel }}"
  bindgetuserinfo="onGetUserInfo"
  bindcontact="onContact"
  bindgetphonenumber="onGetPhoneNumber"
  binderror="onError"
  bindlaunchapp="onLaunchApp"
  bindopensetting="onOpenSetting"
  bind:tap="tap"
>
  <mu-icon
    wx:if="{{loading}}"
    icon="loading"
    class="mu-button__icon mu-button__icon--loading"
  />
  <mu-icon
    wx:if="{{!loading && (icon || iconClass)}}"
    icon="{{icon}}"
    iconClass="{{ iconClass }}"
    class="mu-button__icon"
  />
  <view class="mu-button__text">
    <slot></slot>
  </view>
</button>